@model ContactModel;

<div class="text-center mb-4">
    <h3>Realmente deseja apagar este contato? (@Model.Name)</h3>
</div>

<a class="btn btn-primary w-100 mb-2" asp-controller="Contact" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger w-100" asp-controller="Contact" asp-route-id="@Model.Id" asp-action="Delete">Confirmar exclusão</a>